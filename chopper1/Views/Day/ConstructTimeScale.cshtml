@model int
@{
    var left = ViewBag.Left;
    if (left)
    {
        <div class="margin-div"></div>
    }
    
    var startHour = 5;
    var shift = (5 - (Model - 10)) * 2;

    if (Model!=10 & Model>0)
    { 
        startHour -= shift;
    }
    
    if (startHour<0)
    {
        startHour += 24;
    }
    
    
    int curHour;
    string curHourStr;
}
<div class="ruler-div">
    <ul class="ruler-ul">
        @{
            for (int i = 0; i < 27; i++)
            {
                curHour = startHour + i;
                if (curHour >= 24)
                {
                    curHour -= 24;
                }
                curHourStr = curHour.ToString();
                if (curHourStr.Length == 1)
                {
                    curHourStr = "0" + curHourStr;
                }

                <li>@curHourStr</li>
            }
        }
    </ul>



</div>
@{
                if (!left)
                {
        <div class="margin-div"></div>
                }
}
